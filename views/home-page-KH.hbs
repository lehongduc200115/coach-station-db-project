<!-- filter form section starts  -->

<section class="form-container" data-aos="zoom-in">
    {{#each rows}}
    <form method="POST" action="/viewroute/{{this.ma_khach_hang}}" novalidate>
     {{/each}}
        <div class="inputBox">
            <span>Điểm khởi hành</span>
            <input type="text" placeholder="Bến xe Sài Gòn">
        </div>

        <div class="inputBox">
            <span>Điểm đến</span>
            <input type="text" placeholder="nhập điểm đến" name="diem_den" aria-label="diem_den">
        </div>

        <div class="inputBox">
            <span>Ngày khởi hành</span>
            <input type="date" value="2021-11-17" name="ngay_di" aria-label="ngay_di">
        </div>

        <input type="submit" value="Tìm tuyến xe" class="btn">

    </form>

</section>

<!-- filter form section ends -->

