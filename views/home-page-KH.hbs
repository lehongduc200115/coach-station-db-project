


<!-- home section starts  -->

<section class="home" id="home">

    <div class="image" data-aos="fade-down">
        <img src="/images/home-img.svg" alt="">
    </div>

    <div class="content" data-aos="fade-up">
        <h3>Bến Xe Sài Gòn</h3>
        <p>Welcome to Sai Gon Coach Station</p>
    </div>

</section>

