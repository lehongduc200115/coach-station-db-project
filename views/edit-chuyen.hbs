<!-- filter form section starts  -->

<section class="add-form-container" data-aos="zoom-in">
    <h2>CHỈNH SỬA CHUYẾN XE</h2>
    {{#each rows}}

    <form method="POST" action="/editchuyenxe/{{this.ma_chuyen}}/{{this.ma_nha_xe}}" novalidate>


        <div class="inputBox">
            <span>TÊN TRẠM ĐẾN</span>
            <input type="text" placeholder="nhập Trạm đến" value="{{this.ten_tram_den}}" name="tram_den">
        </div>

        <div class="inputBox">
            <span>NGÀY KHỞI HÀNH</span>
            <input type="date" placeholder="nhập Nơi đến" value="{{this.ngay_khoi_hanh}}" name="ngay_khoi_hanh">
        </div>
        <div class="inputBox">
            <span>TUYẾN XE</span>
            <input type="text" placeholder="nhập mã tuyến" value="{{this.ma_tuyen}}" name="tuyen_xe">
        </div>
        <div class="inputBox">
            <span>GIÁ VÉ</span>
            <input type="text" placeholder="nhập giá vé" value="{{this.gia_ve}}" name="gia_ve">
        </div>
        <input type="submit" value="Chỉnh sửa Chuyến Xe" class="btn">

    </form>
    {{/each}}

</section>

<!-- filter form section ends -->